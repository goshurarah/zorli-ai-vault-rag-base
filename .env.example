# Zorli AI Vault - Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env file to version control

# =================
# DATABASE
# =================
# Supabase PostgreSQL Database URL
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=your_supabase_database_url_here

# =================
# SUPABASE
# =================
# Supabase Project URL (public)
# Format: https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anonymous/Public Key (public - safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (private - DO NOT expose in frontend)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =================
# OPENAI
# =================
# OpenAI API Key for AI features (text analysis, image generation, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =================
# STRIPE (PAYMENTS)
# =================
# Stripe Publishable Key (public - safe to expose in frontend)
# Get from: https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_here

# Stripe Secret Key (private - NEVER expose in frontend)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Testing Stripe Keys (for development/testing)
TESTING_VITE_STRIPE_PUBLIC_KEY=your_testing_stripe_public_key_here
TESTING_STRIPE_SECRET_KEY=your_testing_stripe_secret_key_here

# =================
# OBJECT STORAGE
# =================
# Default Object Storage Bucket ID (provided by Replit)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id_here

# Object storage paths
PUBLIC_OBJECT_SEARCH_PATHS=public
PRIVATE_OBJECT_DIR=.private

# =================
# SESSION & SECURITY
# =================
# Session secret for secure session management (generate a strong random string)
SESSION_SECRET=your_secure_random_session_secret_here

# =================
# DATABASE CREDENTIALS (Auto-managed by Replit)
# =================
# These are typically set automatically in Replit environments
PGDATABASE=your_db_name
PGHOST=your_db_host  
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password

# =================
# DEVELOPMENT
# =================
NODE_ENV=development